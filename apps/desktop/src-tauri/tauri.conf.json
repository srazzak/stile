{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Stile",
    "version": "0.1.0",
    "identifier": "com.stile.dev",
    "build": {
        "frontendDist": "../../web/build/client/",
        "devUrl": "http://localhost:5173"
    },
    "app": {
        "windows": [
            {
                "title": "Stile",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "backgroundColor": "#f8f2ed"
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
